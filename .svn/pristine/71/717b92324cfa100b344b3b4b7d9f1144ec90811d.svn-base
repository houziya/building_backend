.bizmail_loginpanel{font-size:12px;width:300px;height:auto;border:1px solid #cccccc;background:#ffffff;text-align:left}
.bizmail_LoginBox{padding:10px 15px;}
.bizmail_loginpanel h3{padding-bottom:5px;margin:0 0 5px 0;border-bottom:1px solid #cccccc;font-size:14px;}
.bizmail_loginpanel form{margin:0;padding:0;}
.bizmail_loginpanel input.text{font-size:12px;width:140px;height:20px;margin:0 2px;border:1px solid #C3C3C3;border-color:#7C7C7C #C3C3C3 #C3C3C3 #9A9A9A;}
.bizmail_loginpanel .bizmail_column{height:28px;}
.bizmail_loginpanel .bizmail_column label{display:block;float:left;width:30px;height:24px;line-height:24px;font-size:12px;}
.bizmail_loginpanel .bizmail_column .bizmail_inputArea{float:left;width:240px;}
.bizmail_loginpanel .bizmail_column span{font-size:12px;word-wrap:break-word;margin-left: 2px;line-height:200%;}
.bizmail_loginpanel .bizmail_SubmitArea{margin-left:30px;clear:both;}
.bizmail_loginpanel .bizmail_SubmitArea a{font-size:12px;margin-left:5px;float:right}
.bizmail_loginpanel select{width:110px;height:20px;margin:0 2px;}

.deng{height:20px;_overflow:hidden;float:right;}
.deng a{color:#fff;height:20px;line-height:16px;float:left;position:relative}
.deng li{font-size:14px;float:left;position:relative;padding:8px 20px;border-right:1px solid #88a3b9;z-index:99999;}
.deng .email:hover{background-color:#e9eaeb;border:1px solid #88a3b9;border-bottom:none;border-left:none;padding:8px 20px}

.deng ul{background-color:#e9eaeb;border:1px solid #88a3b9;border-top:none;position:absolute;left:-1px;top:-999em;z-index:99999;padding:8px;display:none}
.deng li:hover ul{top:31px;display:block;width:320px;left:-215px}
.deng li:hover ul li{font-size:12px;border:none;width:70px;float:left;padding:4px 0 4px 10px}
.deng li:hover ul li a{color:#333;text-decoration:none;padding:0}
.deng li:hover ul li a:hover{text-decoration:underline}
/*IE6*/
.deng li.hover ul{top:31px;display:block;width:320px;left:-215px}
.deng li.hover ul li{border:none;width:70px;float:left;padding:4px 0 4px 10px}
.deng li.hover ul li a{height:16px;line-height:16px;font-size:12px;color:#333;text-decoration:none;padding:0}
.deng li.hover ul li a:hover{text-decoration:underline}
.deng li.no_sub.hover1{border:1px solid #629d2a;padding:7px 11px}



