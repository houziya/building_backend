/*menu*/
.menu{margin:0 auto;width:100%;height:46px;background:#d8dadb url(../../images/mn-bg.gif) repeat-x 0 0;border-top: 1px solid #88a3b9;border-bottom: 1px solid #88a3b9;position:relative;z-index:999}
.menumain{margin:0 auto;width:1000px;height:46px;border-left:1px solid #88a3b9;}
.menumain ul{height:46px;background:url(../../images/line-2.gif) no-repeat 0 0;float:right;}
.menumain li{width:110px;height:46px;float:left;border-right:1px solid #88a3b9;font-size:15px;font-weight: bold;}
.menu .menumain li a {display:block;height:46px;width:110px;line-height:46px;color:#00468c;text-align:center;}
.onhover{color:#fff;  background: url(../../images/nav-h.png) no-repeat;height:46px;width:110px;line-height:50px;}
.menumain li a:hover{color:#fff;background:#5883a6;height:46px;width:110px;}
.dropmenudiv{position:absolute;border: 1px solid #ccc; border-top:none;border-bottom:none;background:#e7e9e9 ;width:110px;visibility: hidden;padding-bottom:-1px;margin:-85px 0 0 -1px}
.dropmenudiv a{width: 100%;display: block;border-bottom: 1px solid #C5C6C6;padding:0;text-decoration: none;font-size:12px;padding:8px 0}
* html .dropmenudiv a{ /*IE only hack*/
    width:100%;}
.dropmenudiv a:link, a:visited{color:#000;text-decoration:none;}
.dropmenudiv a:hover{ width:100%;background:#fff;color:#ff0000}
.menumain ul .pg,.menumain ul .pg a,.menumain ul .pg a:hover{width:108px;}


